<body>
    <h4>Edit Email</h4>
<form>
    <div class="mb-3">
        <form action="/update-email" method="post" id="email-form">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email-field" placeholder="example@example.com"
            oninput="validateEmailWrapper(event)" />
            <div id="email-error"></div>
            <input type="submit" class="btn btn-primary" value="Save Email">
        </form>
    </div>
    
</form>

    
</body>
